<%- include('./partials/boilerplate') %>

<h1 class="title">Reflective</h1>
<h3 class="subtitle">Looking back to move forward</h3>

<div class="login-container">
    <div class="login-box">
        <form class="auth-form" method="POST" action="/auth/login">
            <input class="auth-inputs" name="username" type="text" placeholder="Username" />
            <input class="auth-inputs" name="password" type="password" placeholder="Password" />
            <input class="auth-inputs" type="submit" value="Log In" />
        </form>
        
        <a class="register-link" href="/auth/register">Register</a>
    </div>
</div>

<%- include('./partials/end') %>